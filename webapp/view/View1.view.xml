<mvc:View controllerName="FitBit.controller.View1" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
	xmlns="sap.m">
	<App>
		<pages>
			<Page title="{i18n>title}">
				<content>
					<Button text = "Save Data" press = "onPress"/>
					<Table id="table" items="{messages>/data}">
						<columns>
							<Column id="userColumn">
								<Text text="User"/>
							</Column>
							<Column id="messageColumn" hAlign="Center">
								<Text text="Message"/>
							</Column> 
						</columns>
						<items>
							<ColumnListItem>
								<cells>
									<ObjectHeader title="{messages>username}"/>
									<Text text="{messages>text}"/>
								</cells>
							</ColumnListItem>
						</items>
					</Table>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>